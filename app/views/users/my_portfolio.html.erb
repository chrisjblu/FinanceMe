<h1>Global Stock Search</h1>

<div class="search-stock">
    <h3>Stocks</h3>
    
    <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
        <div class="col-sm-9">
            <%= text_field_tag :stock, params[:stock], placeholder: "Stock Symbol", autofocus: true, class: "form-control form-control-lg" %>
        </div>
        <div class="col-sm-3">
            
            <%= button_tag type: :submit, class: "btn btn-primary" do %>
            <%= 'Search' %>
            <% end %>
        </div>
    </div>
    <% end %>
</div>
<% if @stock %>
<div class="card card-header">
    <strong>Symbol: </strong> <%= @stock.tickerr %>
     <strong>Name: </strong> <%= @stock.name %>
    <strong>Price: </strong> <%= @stock.last_price %>


    
</div>
<% end %>